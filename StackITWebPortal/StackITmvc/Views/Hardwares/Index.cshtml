@model IEnumerable<StackITmvc.Models.Hardware>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HardwareName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HardwareName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HardwareId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HardwareId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HardwareId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
